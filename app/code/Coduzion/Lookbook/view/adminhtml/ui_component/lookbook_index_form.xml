<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">lookbook_index_form.lookbook_index_form_data_source</item>
            <item name="deps" xsi:type="string">lookbook_index_form.lookbook_index_form_data_source</item>
        </item>
        <item name="label" translate="true" xsi:type="string">General Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">lookbook_index_form</item>
        </item>
        <item name="spinner" xsi:type="string">general_information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <dataSource name="lookbook_index_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Coduzion\Lookbook\Model\Lookbook\DataProvider</argument>
            <argument name="name" xsi:type="string">lookbook_index_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">lookbook_id</argument>
            <argument name="requestFieldName" xsi:type="string">lookbook_id</argument>
            <argument name="data" xsi:type="array">
              <item name="config" xsi:type="array">
                 <item name="submit_url" xsi:type="url" path="*/*/save"/>
              </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="assign_products">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Products</item>
                <item name="sortOrder" xsi:type="number">90</item>
            </item>
        </argument>
        <container name="assign_products_container">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">100</item>
                </item>
            </argument>
            <htmlContent name="html_content">
                <argument name="block" xsi:type="object">Coduzion\Lookbook\Block\Adminhtml\Lookbook\AssignProducts</argument>
            </htmlContent>
        </container>
    </fieldset>
</form>
