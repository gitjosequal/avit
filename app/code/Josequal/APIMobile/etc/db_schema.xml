<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_account_deletion" resource="default" engine="innodb" comment="Customer Account Deletion Requests">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="timestamp" name="deletion_requested_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Deletion Requested At"/>
        <column xsi:type="timestamp" name="scheduled_deletion_at" on_update="false" nullable="false" comment="Scheduled Deletion At"/>
        <column xsi:type="smallint" name="status" unsigned="true" nullable="false" default="1" comment="Status: 1=Pending, 2=Cancelled, 3=Completed"/>
        <column xsi:type="text" name="reason" nullable="true" comment="Deletion Reason"/>
        <column xsi:type="timestamp" name="cancelled_at" on_update="false" nullable="true" comment="Cancelled At"/>
        <column xsi:type="timestamp" name="deleted_at" on_update="false" nullable="true" comment="Actually Deleted At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="CUSTOMER_ACCOUNT_DELETION_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID"
                    table="customer_account_deletion" column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE"/>

        <index referenceId="CUSTOMER_ACCOUNT_DELETION_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>

        <index referenceId="CUSTOMER_ACCOUNT_DELETION_STATUS" indexType="btree">
            <column name="status"/>
        </index>

        <index referenceId="CUSTOMER_ACCOUNT_DELETION_SCHEDULED_DELETION_AT" indexType="btree">
            <column name="scheduled_deletion_at"/>
        </index>

        <index referenceId="CUSTOMER_ACCOUNT_DELETION_ENTITY_ID" indexType="btree">
            <column name="entity_id"/>
        </index>
    </table>
</schema>
